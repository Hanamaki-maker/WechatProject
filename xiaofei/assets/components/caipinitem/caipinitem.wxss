/* assets/components/caipinitem/caipinitem.wxss */
.list-item{
  padding: 15px 0px;
  display: flex;
  position: relative;
  width: 100%;
  height: 200px;
  background: white;
  border-bottom: 1px solid rgb(230, 228, 228);
}

.list-item image{
  width: 150px;
  height: 130px;
  margin-top: 20px;
  margin-left: 10px; 
}

.text{
  width: 200px;
  height: 170px;
  position: relative;
  margin-left: 10px;
}

.name{
  width: 200px;
  height: 30px;
  display: block;
  text-align: center;
  font-weight: bold;
  position: relative;
  line-height: 30px;
}

.msg{
  width: 200px;
  height: 110px;
  display: flex;
  position: relative;
  font-weight: lighter;
}

.price{
  width: 150px;
  height: 30px;
  display: flex;
  position: absolute;
  margin-left: 50px;
  line-height: 30px;
  font-weight: bolder;
  margin-top: 10px;
  color: red;
}